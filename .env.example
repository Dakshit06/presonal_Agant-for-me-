# Application Settings
APP_NAME=Agentice
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://agentice:password@localhost:5432/agentice
REDIS_URL=redis://localhost:6379/0

# LLM Providers
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
AZURE_OPENAI_ENDPOINT=your-azure-endpoint
AZURE_OPENAI_KEY=your-azure-key

# AutoGen Configuration
AUTOGEN_USE_DOCKER=false
AUTOGEN_MAX_CONSECUTIVE_AUTO_REPLY=10
AUTOGEN_HUMAN_INPUT_MODE=ALWAYS

# Google Services
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send
CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar

# Microsoft Services
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id

# GitHub
GITHUB_TOKEN=your-github-token
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-token

# Job Board APIs
INDEED_API_KEY=your-indeed-key
LINKEDIN_JOBS_API_KEY=your-linkedin-jobs-key
GLASSDOOR_API_KEY=your-glassdoor-key

# Resume & Document Storage
RESUME_STORAGE_PATH=/data/resumes
DOCUMENT_STORAGE_PATH=/data/documents
TEMP_FILE_PATH=/tmp/agentice

# Notification Services
NOTIFICATION_EMAIL_FROM=noreply@agentice.ai
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email
SMTP_PASSWORD=your-password
FIREBASE_CREDENTIALS_PATH=/config/firebase-credentials.json

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_AUTO_APPLY=false
ENABLE_VOICE_INTERFACE=false
REQUIRE_APPROVAL_FOR_EMAILS=true
REQUIRE_APPROVAL_FOR_APPLICATIONS=true
ENABLE_PROFILE_AUTO_UPDATE=false

# Rate Limiting
MAX_APPLICATIONS_PER_DAY=50
MAX_EMAILS_PER_HOUR=100
MAX_PROFILE_UPDATES_PER_WEEK=10

# AI Model Configuration
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
FAST_LLM_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=text-embedding-3-small
RESUME_OPTIMIZATION_MODEL=gpt-4-turbo-preview
COVER_LETTER_MODEL=gpt-4-turbo-preview

# Vector Database
VECTOR_DB_TYPE=pgvector
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.75

# Security
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRATION_DAYS=30
ENCRYPTION_KEY=your-encryption-key-here

# Application Tracking
TRACK_APPLICATION_STATUS=true
APPLICATION_FOLLOWUP_DAYS=7,14,21
